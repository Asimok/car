<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tvBandBluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="已绑定蓝牙设备："
        android:textSize="18sp" />
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/startgetweight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="2"
            android:background="@drawable/btn_open"

            android:text="开启"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:background="@drawable/btn_open"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="初始化"
            android:id="@+id/initweight"
           />

</LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <com.example.laundryrack.tools.LongClickButton
            android:id="@+id/uplaundary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="2"
            android:background="@drawable/btn_open"

            android:text="上升"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <com.example.laundryrack.tools.LongClickButton
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:background="@drawable/btn_open"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="下降"
            android:id="@+id/downlaundary"
            />

    </LinearLayout>
   <LinearLayout

       android:gravity="center"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="20dp">

</LinearLayout>
    <LinearLayout
        android:paddingTop="100dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView

            android:textSize="20sp"
            android:text="当前重量:   "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/tvrecive"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="未连接"
            android:textColor="#2196F3"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:paddingTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgflodstate"
            android:src="@drawable/unflod"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <TextView
            android:id="@+id/flodstate"
            android:textSize="20sp"
            android:text="未叠被"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />





    </LinearLayout>
</LinearLayout>